<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.semerson.networkassessment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Launching Activity -->
        <activity
            android:name=".activities.WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.authentication.LoginActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.authentication.RegisterUserActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.Results.ResultsActivity"
            android:label="@string/title_activity_results"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".activities.user.awareness.UserAwareness"
            android:label="@string/title_activity_user_awareness"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.network.NetworkDevices"/>
        <activity
            android:name=".activities.settings.SettingsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.authentication.AccountActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".activities.user.awareness.quiz.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.user.awareness.quiz.QuizHome"
            android:label="@string/title_activity_quiz_home"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.authentication.NetworkConfiguration"
            android:label="@string/title_activity_network_configuration"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>
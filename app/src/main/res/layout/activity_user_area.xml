<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.semerson.networkassessment.activities.WelcomeActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <include layout="@layout/navigation_main_toolbar" />

        <LinearLayout
            android:id="@+id/headerOpsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lastscandate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Risk Score from previous scans"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="visible" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/linechart"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/txtTipOfTheDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:text="Tip of the day: Be extra careful while clicking links and attachments in emails. The sending party may look legitimate. It is very important to be wary before clicking any attachments. Please visit the User Awareness 'Phishing' section for more information."
            android:textAlignment="viewStart" />

    </LinearLayout>
    </ScrollView>

    <include layout="@layout/navigation_main_drawer" />

</android.support.v4.widget.DrawerLayout>
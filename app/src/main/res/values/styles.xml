<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custom_mainbody_text">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorLink">#0000EE</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="custom_page_title">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="custom_mainbody_heading_centered">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="custom_mainbody_heading_medium">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="no_risks_found_text">
        <item name="android:textColor">#00FF00</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="never_scanned_text">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="risks_found_text">
        <item name="android:textColor">#ff0000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_yellow">
        <item name="android:textColor">#e9de16</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_orange">
        <item name="android:textColor">#f4890e</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_red">
        <item name="android:textColor">#ff0000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_black">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
